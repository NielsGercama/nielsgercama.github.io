				function toggleMenu() {
					var x = document.getElementById("myLinks");
					if (x.style.display === "block") {
						x.style.display = "none";
					} else {
						x.style.display = "block";
					}
				}
				
				if (screen.width > 699) {
					document.location = "https://nielsgercama.com/weallscreamforicecream";
